<h1> search for a cat </h1>

<!-- we are not working with a model object,
so we cannot use the 'form_for @cat' -->

<!--  form tag -   -->

	<%= form_tag cats_search_path, method: :get do |f| %>

		<%= search_field_tag :name %>

		<%= submit_tag 'Search', name: nil %>
<% end %>

<% if @cats.any? %>

<h2> search result </h2>
<%= render 'cats' %>

<% else %>

<h2> no cat in db has that name </h2>

<!-- render '_cats.html.erb' partial -->
<%= render 'cats' %>


<% end %>


